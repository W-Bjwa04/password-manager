<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  </head>
  <body>





      <!-- create an add new category form  -->
    <div class="container">
        <div class="row">
          <h2 class="text-center"><%= title %></h2>
          <div
            id="addnewcategorybox"
            style="margin-top: 50px"
            class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2"
          >
            <div class="panel panel-info">
              <div class="panel-heading">
                <div class="panel-title">Edit Category</div>
              </div>



              <div class="panel-body">

                  <!-- alert if user enter no password category  -->

              <% if (!((error == null))) { %>
                <div class="alert alert-danger" role="alert">
                  <p style="text-align: center"><%= error.errors[0]['msg']%></p>
                </div>
                <% } %>


                <form
                  action="/passwordCategory/edit/<%=objId%>"
                  id="AddNewCategoryForm"
                  class="form-horizontal"
                  method="post"
                  role="form"
                >
                  <div class="form-group">
                    <label for="addnewcateg" class="col-md-3 control-label"
                      >Category</label
                    >
                    <div class="col-md-9">
                      <input
                        type="text"
                        class="form-control"
                        name="editcatg"
                        placeholder="Enter Your New Category"
                        value="<%= object.password_category %>"
                      />
                    </div>
                  </div>
  
                
                  <div class="form-group">
                    <!-- Button -->
                    <div class="col-md-offset-3 col-md-9">
                      <input
                        type="submit"
                        name="submit"
                        value="Update"
                        class="btn btn-primary"
                      />
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>



  </body>
</html>
